<resources>

    <!-- Base application theme. -->
    <style name="TpOnAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tpon_ColorPrimary</item>
        <item name="colorPrimaryDark">@color/tpon_ColorAccent</item>
        <item name="colorAccent">@color/tpon_ColorAccent</item>
        <item name="colorControlActivated">@color/tpon_ColorAccent</item>
        <item name="colorControlHighlight">@color/tpon_ColorAccent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TpOnAppTheme.Title">
        <item name="android:textColor">@color/tpon_ColorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TpOnAppTheme.LightTitle">
        <item name="android:textColor">@color/tpon_ColorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TpOnAppTheme.LighterTitle">
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TpOnAppTheme.TitleSmall">
        <item name="android:textColor">@color/tpon_marine</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>


    <style name="TpOnAppTheme.Desc">
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TpOnAppTheme.DescSmall">
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TpOnAppTheme.DescAccent">
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="TpOnAppTheme.DescAccentSmall">
        <item name="android:textColor">@color/tpon_edittext_label</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TpOnAppTheme.DescPromo">
        <item name="android:textColor">@color/tpon_descr_promo</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>


    <style name="TpOnAppTheme.TitleOnBoarding">
        <item name="android:textColor">@color/tpon_title_color</item>
        <item name="android:textSize">@dimen/tpon_title</item>
        <item name="android:gravity">left</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="TpOnAppTheme.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/phone_prefix_round_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <style name="TpOnAppTheme.EditTextProfile">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>



    <style name="TpOnAppTheme.StartActionButton" parent="@style/Widget.AppCompat.Button.Borderless">>
        <item name="android:background">@drawable/round_shape_action_button</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="TpOnAppTheme.ActionButton">
        <item name="android:background">@drawable/tpon_actionbutton_background</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="TpOnAppTheme.InfoButton">
        <item name="android:background">@color/tpon_info_button</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tpon_info_button_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>


    <style name="TpOnAppTheme.TutorialButton">
        <item name="android:background">@drawable/round_shape_generic_button</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tpon_action_button</item>
    </style>



    <style name="TpOnAppTheme.AcceptAllActionButton">
        <item name="android:background">@drawable/round_shape_generic_button</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tpon_action_button</item>
    </style>



    <style name="TpOnAppTheme.DigitOtp">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tpon_digit_number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:focusableInTouchMode">true</item>

    </style>

    <style name="TpOnAppTheme.DigitOtpEmail">
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/tpon_descr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tpon_digit_number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:focusableInTouchMode">true</item>

    </style>


</resources>
